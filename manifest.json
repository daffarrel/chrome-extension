{
  "name": "X-Man",
  "manifest_version": 2,
  "description" : "toolbox for hacker",
  "version": "1.0",
  "options_page": "options.html",
  "devtools_page": "devtools.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts":[{
    "matches" : [ "<all_urls>"  ],
    "css"     : [ "content.css" ],
    "js"      : [ "content.js"  ]
  }],
  "permissions": [
    "background",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
